{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: API",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app/api.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/app",
            "envFile": "${workspaceFolder}/app/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/app"
            },
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Uvicorn running on http://0.0.0.0:8001",
                "uriFormat": "http://localhost:8001/docs"
            }
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/app",
            "envFile": "${workspaceFolder}/app/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/app"
            }
        }
    ]
}
